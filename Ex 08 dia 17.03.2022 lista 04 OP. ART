<script>
function auxilio() {
var menos = menosdez.value * 30
var mais = partir.value * 20
var total = Number(menos) + Number(mais)
mostrar.innerHTML = `Você tem ${menosdez.value} filhos menores de 10 anos e ${partir.value} filhos a partir de 10 anos, logo, seu "Auxílio Filhos" será de R$ ${total}`

}



</script>
