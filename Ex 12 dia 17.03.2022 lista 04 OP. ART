<script>
function calcular() {
    var faseum = sono.value * 0.05
    var fasedois = sono.value * 0.45
    var fasetres = sono.value * 0.3
    var fasequatro = sono.value * 0.2

 mostrar.innerHTML = `${faseum.toFixed(2)} horas na fase 1 <br> ${fasedois.toFixed(2)} horas na fase 2 <br> ${fasetres.toFixed(2)} horas na fase 3 <br> ${fasequatro.toFixed(2)} horas na fase 4 `
 

}



</script>
