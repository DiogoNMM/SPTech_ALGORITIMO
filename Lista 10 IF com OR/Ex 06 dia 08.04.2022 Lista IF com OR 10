<body>
    Você já clicou <b id="b_quantidade">0</b> vezes
    <br><br>
    <button onclick="clicar()">Clique cabalístico</button>
</body>
</html>
<script>
var clique = 0
function clicar() {
    clique ++
    b_quantidade.innerHTML = clique   
    if (clique == 3 || clique == 4 || clique == 7 || clique == 10) {
        alert (`voce clicou ${clique} vezes e juliana gosta desse número`) 
    }
}
</script>
