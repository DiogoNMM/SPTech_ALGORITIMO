<script>
var votospraca = 0
var votoszorra = 0
var tot = 0
function nossa() {
    votospraca += 1;
praca.innerHTML = votospraca; 
    tot += 1;
    total.innerHTML = tot; 
}

function zorratotal() {
    votoszorra += 1;
zorra.innerHTML = votoszorra;
    tot += 1;
    total.innerHTML = tot;
}




</script>
