<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ex 01</title>
</head>
<body>
    Coloque sua altura:
    <input type="text" id="altura"> <br><br>
    <button onclick="botao()">Analisar</button> <br><br>
    <div id="mostrar"></div>
</body>
</html>
<script>
function botao() {
if (altura.value <= 1.65) {
    mostrar.innerHTML = `Você pode ser piloto de corrida`
}else {
    if (altura.value <= 1.80) {
        mostrar.innerHTML = `Você pode ser jogador de futebol`
    }else{
        mostrar.innerHTML = `Você pode ser jogador de volei ou basquete`
    }
}



}



</script>
