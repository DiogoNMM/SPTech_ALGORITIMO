<script>
function luz() {
var conta = consumo.value * 0.85 
var total = conta * 30
var desconto = total - (0.1 * total)
alert (`Sua conta no total deu R$${(total).toFixed(2)}`)
if (total < 100) {
    alert (`Com um desconto sua conta ficou em R$${(desconto).toFixed(2)}`)
}

}



</script>
