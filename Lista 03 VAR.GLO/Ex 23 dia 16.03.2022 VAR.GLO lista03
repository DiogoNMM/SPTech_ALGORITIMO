<script>
var votosmaia = 0
var votosrenato = 0
var totalvotos = 0

function tim() {
    votosmaia += 1;
    maia.innerHTML = votosmaia

    totalvotos += 1;
    total.innerHTML = totalvotos
}

function renato() {
    votosrenato += 1;
    russo.innerHTML = votosrenato

    totalvotos += 1
    total.innerHTML = totalvotos


}

</script>
