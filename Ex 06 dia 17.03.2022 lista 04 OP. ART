<script>

function calcular() {
    var frequencia = 100 - (faltou.value / totais.value) * 100


    mostrar.innerHTML = `<span style="color: blue;"> Olá, ${nome.value}! Sua frequência foi de </span> <span style="color: green;"> <b>${frequencia}%</b>`
}



</script>
